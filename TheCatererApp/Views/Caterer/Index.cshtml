
@model IEnumerable<TheCatererApp.Models.Caterer>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Caterers</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Caterer" asp-action="Create" class="btn btn-primary">
                Create new Caterer
            </a>
        </div>
    </div>

</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Caterer Name
                </th>
                <th>
                    Services
                </th>
                <th>
                    Description
                </th>
                <th>
                    Location
                </th>
                <th>
                    Rating
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="50%">@obj.Services</td>
                    <td width="50%">@obj.Description</td>
                    <td width="50%">@obj.Location</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Caterer" asp-route-Id="@obj.id" asp-action="Edit" class="btn btn-primary mx-2"> Edit
                                </a>
                                <a asp-controller="Caterer" asp-route-Id="@obj.id" asp-action="Delete" class="btn btn-danger mx-2">
                                   Delete
                                </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
@*}
else
{
    <p>No Caterer exists</p>*@
}
